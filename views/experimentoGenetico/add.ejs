<a href="/experimentoGenetico/lst">Listar Experimentos</a>

<form action="/experimentoGenetico/add" method="post" enctype="multipart/form-data">
  <label>Nome:</label>
  <input type="text" name="nome" required><br>

  <label>Descrição:</label>
  <textarea name="descricao" rows="4" cols="40" required></textarea><br>

  <label>Data de Início:</label>
  <input type="date" name="dataInicio" required><br>

  <label>Imagem (opcional, PNG):</label>
  <input type="file" name="imagem" accept="image/png"><br>

  <button type="submit">Cadastrar</button>
</form>

