<a href="/dinossauro/lst">Listar Dinossauros</a>

<form action="/dinossauro/add" method="post" enctype="multipart/form-data">
  <label>Nome:</label>
  <input type="text" name="nome" required><br>

  <label>Espécie:</label>
  <input type="text" name="especie" required><br>

  <label>Idade (anos):</label>
  <input type="number" name="idade" required><br>

  <label>Nível de Agressividade (1–10):</label>
  <input type="number" name="nivelAgressividade" min="1" max="10" required><br>

  <label>Imagem do Dinossauro (PNG):</label>
  <input type="file" name="imagem" accept="image/png"><br>

  <button type="submit">Cadastrar</button>
</form>

